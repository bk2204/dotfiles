# SMTP.
set smtp_url=smtp://bmc@smtp.crustytoothpaste.net:587/
set smtp_authenticators="gssapi:digest-md5:cram-md5"
# IMAP.
set imap_user=bmc
set imap_passive=no
set imap_check_subscribed=yes
set imap_peek=no
set imap_idle=yes
set imap_authenticators="gssapi:digest-md5:cram-md5"
set imap_check_subscribed=yes
set imap_list_subscribed=yes
set imap_headers="X-CRM114-STATUS"
# Folders.
set folder=imap://imap.crustytoothpaste.net/
set spoolfile=imap://imap.crustytoothpaste.net/INBOX
set move=no
set delete_untag=yes
set postponed="=Drafts"
set record="=Sent"
set pipe_split=yes
# Headers.
my_hdr From: brian m. carlson <sandals@crustytoothpaste.net>
# Hooks.
save-hook ~p =Handled
