# SMTP.
set smtp_url=smtp://bk2204%40github.com@smtp.gmail.com:587/
set smtp_pass=`secret-tool lookup user bk2204@github.com uri smtp://smtp.gmail.com:587/`
set smtp_authenticators="plain"
# IMAP.
set imap_user=bk2204@github.com
set imap_pass=`secret-tool lookup user bk2204@github.com uri imaps://imap.gmail.com/`
set imap_passive=no
set imap_check_subscribed=yes
set imap_peek=no
set imap_idle=yes
set imap_authenticators="plain"
set imap_check_subscribed=yes
set imap_list_subscribed=yes
set imap_headers="X-CRM114-STATUS"
set mail_check=300
set folder=imaps://imap.gmail.com:993/
set spoolfile=imaps://imap.gmail.com:993/INBOX
set move=no
set delete_untag=yes
set postponed="=[Gmail]/Drafts"
set pipe_split=yes
set record="=[Gmail]/Sent Mail"
set mark_old=no
unset record
# Headers.
my_hdr From: "brian m. carlson" <bk2204@github.com>
# Hooks.
save-hook ~p =Handled
