#!/bin/bash

PATH="$(echo $PATH | sed -e "s,$HOME/bin:,,")"

redirect () {
	# Deal with inaccessible /dev/fd.
	if [ -d '/dev/fd' ]
	then
		exec "$@" 2> >(grep -vF 'gpg: WARNING: unsafe ownership' 1>&2)
	else
		exec "$@"
	fi
}


if which gpg2 >/dev/null 2>&1
then
	redirect gpg2 "$@"
else
	redirect gpg "$@"
fi
