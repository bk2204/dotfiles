#!/usr/bin/perl

use List::Util;

my @words;

while (<>) {
	chomp;
	push @words, grep { !/^[^A-Za-z0-9]*$/ } split /[^A-Za-z0-9'-]+/;
}

my $time = time;
srand $time;

print "Time: $time\n\n";

@words = List::Util::shuffle(@words);

my @lists;

while (scalar @words) {
	my @list;
	for (my $i = 0; scalar @words && $i < 5; $i++) {
		push @list, (shift @words);
	}
	push @lists, [@list];
}

foreach my $list (@lists) {
	print join(" ", @$list), "\n";
}
