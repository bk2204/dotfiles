#!/bin/sh

set -e

TTYNAME=`tty | sed -re 's/^(.{8}).*$//'`

[ "$TTYNAME" != "/dev/tty" ] || exit 2

if [ `id -u` -ne 0 ]
then
	sudo "$0" "$@"
	exit $?
fi

MODULES="uhci-hcd pcmcia yenta-socket i915"

for i in $MODULES
do
	modprobe -r $i
done

cat /proc/interrupts

for i in $MODULES
do
	modprobe $i
done
